{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["warning", "never"],
        // Indent with 4 spaces
        "indent": ["warning", 4],
        // Indent JSX with 4 spaces
        "react/jsx-indent": ["warning", 4],
        // Indent props with 4 spaces
        "react/jsx-indent-props": ["warning", 4]
    },
    "parser": "babel-eslint"
}