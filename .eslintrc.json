{
    "env": {
        "browser": true,
        "es2021": true,
        "jasmine": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // No errors when ; is missing
        "semi": ["error", "never"],
        // Indent with 4 spaces
        "indent": ["error", 4],
        // Indent JSX with 4 spaces
        "react/jsx-indent": ["error", 4],
        // Indent props with 4 spaces
        "react/jsx-indent-props": ["error", 4],
        // Allow imports of devDependencies in test files only
        "import/no-extraneous-dependencies": ["error", { "devDependencies": ["src/**/*.test.*", "src/setupTests.js"] }],
        // Ignore "JSX not allowed in files with extension '.js'" TO BE REMOVED
        "react/jsx-filename-extension": ["error", { "extensions": [".js", ".jsx"] }],
        // Ignore "Do not use Array index in keys" TO BE REMOVED
        "react/no-array-index-key": 0, // = off
        // Ignore "Elements with the 'button' interactive role must be focusable." TO BE REMOVED
        //"jsx-a11y/interactive-supports-focus": 0,
        // Ignore "Visible, non-interactive elements with click handlers must have at least one keyboard listener." TO BE REMOVED
        //"jsx-a11y/click-events-have-key-events": 0,
        // Ignore "Unexpected require()." only for src/tests/index.test.js
        "global-require": [0, { "devDependencies": ["src/tests/index.test.js"] }]
    },
    "parser": "babel-eslint"
}